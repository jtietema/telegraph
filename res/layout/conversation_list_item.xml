<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_picture"
        android:src="@drawable/social_person"
        android:contentDescription="@string/contact_picture"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="Jeroen Tietema" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_toRightOf="@id/contact_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="10-11-2012 15:14:13"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/time"
        android:textSize="14sp"
        android:text="Test message all we onto multiple lines of text to make it fit."/>

</RelativeLayout>